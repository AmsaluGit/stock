{% extends 'base.html.twig' %}

{% block title %}Stock
{% endblock %}

{% block body %}
 


<div class=" container container-fluid">
<div class=" card card-info ">

<div class="card card-header">
<h3> Stock details</h3>
</div>
<div class="card card-body">

<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ stock.id }}</td>
			</tr>
			<tr>
				<th>Product</th>
				<td>{{ stock.product.name }}</td>
			</tr>
			<tr>
				<th>Store</th>
				<td>{{ stock.store.name }}</td>
			</tr>
			<tr>
				<th>Quantity</th>
				<td>{{ stock.quantity }}</td>
			</tr>
			<tr>
				<th>Price per unit</th>
				<td>{{ stock.price }}</td>
			</tr>
			<tr>
				<th>Company</th>
				<td>{{ stock.company }}</td>
			</tr>
			<tr>
				<th>Date received </th>
			<td>{{ stock.date | date('Y-m-d') }}</td>
			</tr>
		</tbody>
	</table>




<div>
<div>
<div>



	

	<a href="{{ path('stock_index') }}" class="btn btn-primary">back to list</a>
 
	<form class="d-inline" method="post" action="{{ path('stock_delete', {'id': stock.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">

		<button class="btn btn-danger btn" title="Delete">
			{# <i class="fa fa-trash"></i> #}
Delete
		</button>
	</form>




{% endblock %}
