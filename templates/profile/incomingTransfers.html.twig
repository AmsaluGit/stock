{% extends 'base.html.twig' %}

{% block title %}Profile!
{% endblock %}

{% block body %}

	<div class="container-fluid card">
		<div class="row">
			<div class="col-sm-12">
                <table class="table table-stripped" style="width:100%" id="item_table">
                    <thead>
                        <th>Transfered From</th>
                        <th>Requested Date</th>
                        <th>Total Items</th>
                        <th>status</th>
                        <th>actions</th>
                    </thead>
                    <tbody>
                        {% for item in item %}
                            <tr>
                                <td>{{item.fname}} {{item.mname}} {{ item.lname }}</td>
                                <td>{{item.date|date("Y-m-d")}}</td>
                                <td>{{item.total}}
                                <td>
                                    {% if item.status == 0 %}
                                        <span class="badge badge-primary">Not approved</span>
                                    {% elseif item.status == 1 %}
                                        <span class="badge badge-success">Accepted</span>
                                    {% elseif (item.status == 2) or (item.status == 3) %}
                                        <span class="badge badge-defalut">in progress</span>
                                    {% elseif item.status == 4 %}
                                        <span class="badge badge-success">Approved</span>
                                    {% else %}

                                        <span class="badge badge-danger">Declined</span>
                                    {% endif %}
                                </td>
                                <td><a href="transfer/{{ item.id }}" >show </a></td>
                                {# <td>{{item.firstName}} {{item.middleName}} {{ item.lastName }}</td> #}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <button id="submit" class="btn btn-primary" style="display:none;margin-bottom: 30px;">Next >></button>
            </div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
    <script src="{{asset('assets/plugins/datatables/datatables.min.js')}}"></script>
    <script>
        $("#item_table").dataTable();
    </script>
{% endblock %}