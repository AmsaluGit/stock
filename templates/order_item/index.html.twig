{% extends 'base.html.twig' %}

{% block title %}OrderItem index{% endblock %}

{% block body %}
    <h1>OrderItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>RecievedDate</th>
                <th>ReturnDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_item in order_items %}
            <tr>
                <td>{{ order_item.id }}</td>
                <td>{{ order_item.quantity }}</td>
                <td>{{ order_item.price }}</td>
                <td>{{ order_item.recievedDate ? order_item.recievedDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order_item.returnDate ? order_item.returnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('order_item_show', {'id': order_item.id}) }}">show</a>
                    <a href="{{ path('order_item_edit', {'id': order_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_item_new') }}">Create new</a>
{% endblock %}
