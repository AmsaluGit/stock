{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}
{% block maintitle %}
    Product
{% endblock %}

{% block body %}
	{# <h1>Product</h1> #}
	<div class="card" style="padding-bottom:25px;">
		<form action="{{ path('addtocart', {'id': stockUnique.product.id}) }}" method="POST">
			<table class="table table-responsive" >
				<tbody >

					<tr>
						<th style="width:300px">Name</th>
						<td>{{ stockUnique.product.name }}</td>
					</tr>
 
					<tr>
						<th>Product Type</th>
						<td>{{ stockUnique.product.productType }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ stockUnique.product.description }}</td>
					</tr>

					<tr>
						<th>Category</th>
						<td>{{ stockUnique.product.category }}</td>
					</tr>

				

					<tr>
						<th>Quantity</th>
						<td><input type="number" name="quantity" id="quantity" min="1" max={{stockUnique.available}} required/></td>
					</tr>
				</tbody>

			</table>

			<a href="{{ path('product_index') }}" class="btn btn-primary" style="margin-left:25px;">back to list</a>
<input type = "hidden" name = "productid" value="{{ stockUnique.product.id }}"/>
<input type = "hidden" name = "stockid" value="{{ stockUnique.id }}"/>
<input type = "hidden" name = "avail" value="{{ stockUnique.available }}"/>
			<button type="submit" class="btn btn-success" title="Request">
				<i class="fa fa-cart-arrow-down">Add to cart</i>
			</button>
		</form>
	</div>

	{% block javascript%}{% endblock %}
{% endblock %}
